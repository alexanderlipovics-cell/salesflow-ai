# Sales Flow AI Backend - Environment Template
# Kopiere nach `.env` und ersetze die Werte.

# Application
APP_NAME=Sales Flow AI - CHIEF Coaching
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# API
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000","https://app.salesflow.ai"]

# OpenAI
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=30

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Caching
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json


