{
  "version": 2,
  "framework": null,
  "buildCommand": "npx expo export --platform web",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/_expo/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "EXPO_PUBLIC_API_URL": "https://salesflow-api.onrender.com/api/v1",
    "EXPO_PUBLIC_SUPABASE_URL": "https://demo.supabase.co",
    "EXPO_PUBLIC_SUPABASE_ANON_KEY": "demo-key-replace-in-vercel-dashboard"
  }
}
