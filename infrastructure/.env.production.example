# ============================================
# üîê SALESFLOW AI - PRODUCTION ENVIRONMENT
# ============================================
# Copy to .env and fill in production values
# NEVER commit .env to version control!

# ==================== APPLICATION ====================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=  # Generate: openssl rand -hex 32
APP_VERSION=1.0.0

# ==================== DOMAIN ====================
DOMAIN=salesflow.ai
API_DOMAIN=api.salesflow.ai

# ==================== DATABASE (SUPABASE) ====================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Direct database connection (for migrations)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# ==================== REDIS ====================
REDIS_URL=redis://redis:6379/0

# ==================== AUTHENTICATION ====================
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== SOCIAL MEDIA APIS ====================
# Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_VERIFY_TOKEN=  # Random string for webhook verification

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Instagram (uses Facebook App)
INSTAGRAM_APP_ID=${FACEBOOK_APP_ID}
INSTAGRAM_APP_SECRET=${FACEBOOK_APP_SECRET}

# ==================== AI ====================
OPENAI_API_KEY=sk-...

# ==================== MONITORING ====================
# Sentry
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=  # Strong password

# ==================== EMAIL ====================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=  # SendGrid API key
SMTP_FROM_EMAIL=noreply@salesflow.ai
SMTP_FROM_NAME=SalesFlow AI

# ==================== STORAGE ====================
# AWS S3 (for backups)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BACKUP_BUCKET=salesflow-backups
S3_REGION=eu-central-1

# ==================== NOTIFICATIONS ====================
# Slack
SLACK_WEBHOOK=https://hooks.slack.com/services/xxx/xxx/xxx

# ==================== CORS ====================
CORS_ORIGINS=https://salesflow.ai,https://www.salesflow.ai

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_RPM=100

# ==================== FEATURE FLAGS ====================
FEATURE_AI_CHAT=true
FEATURE_VOICE_INPUT=true
FEATURE_OFFLINE_MODE=true
FEATURE_TEAM_SHARING=true

# ==================== DOCKER ====================
TAG=latest
BUILD_DATE=
VERSION=1.0.0
